<div class="mt-3">  
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/courses/store"> 
        <div class="form-group mt-3">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name">
        </div> 
        <div class="form-group mt-3">
            <label for="description">Mô tả khoá học</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="form-group mt-3">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>  
        <div class="form-group mt-3">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level">
        </div> 
        <button type="submit" class="mt-4 btn btn-primary">Thêm khoá học</button>
    </form> 
</div>