<div class="mt-3">  
    <h3>Đăng bài viết</h3>
    <form method="POST" action="/post/store">  
        <div class="form-floating mt-3">
            <input type="text" class="form-control" id="name"  name="name" placeholder="name@example.com">
            <label for="name">Tên bài viết</label>
        </div>
         
        <div class="form-floating mt-3">
            <textarea class="form-control" placeholder="Leave a comment here" id="description" name="description" style="height: 100px"></textarea>
            <label for="description">Nội dung bài viết</label>
        </div>

        <div class="form-floating mt-3">
            <input type="text" class="form-control" id="name"  name="videoId" placeholder="name@example.com">
            <label for="videoId">Ảnh bài viết (URL)</label>
        </div>  
        <button type="submit" class="mt-4 btn btn-primary">Thêm bài viết</button>
    </form> 
</div>